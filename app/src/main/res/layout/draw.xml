<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".Draw"
    android:background="@color/secondary">
    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@id/from"
            android:layout_width="35dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="From"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/start"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/from"
            android:background="@drawable/borderlayout"
            android:imeOptions="flagNoExtractUi"
            android:nextFocusLeft="@id/end"
            android:padding="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/start"
            android:text="To"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:imeOptions="flagNoExtractUi|actionDone"
            android:id="@+id/end"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/to"
            android:background="@drawable/borderlayout"
            android:padding="10dp"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/end"
            android:background="@drawable/buttonbackground"
            android:onClick="addEdge"
            android:text="Add Edge"
            android:textColor="@color/secondary"
            android:textSize="15dp" />
        <Button
            android:id="@+id/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/add"
            android:layout_marginLeft="30dp"
            android:background="@drawable/borderbutton"
            android:onClick="calculate"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear">
        <com.blure.complexview.ComplexView
            android:id="@+id/addcustom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shadow="true"
            app:bottomLeftRadius="20dp"
            app:bottomRightRadius="20dp"
            app:topLeftRadius="20dp"
            app:topRightRadius="20dp"
            app:shadowSpread="2">
            <com.example.graf.drawView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.blure.complexview.ComplexView>
    </RelativeLayout>
</RelativeLayout>
